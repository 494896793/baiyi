<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/__picker_color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="要删除这张照片吗?"
        android:textColor="@color/__picker_color_gray_999999"
        android:textSize="14sp" />


    <View style="@style/__picker_DivideLineStyle" />

    <LinearLayout
        android:id="@+id/llytDeletePhoto"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDeletePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/__picker_color_red_e71100"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/__picker_color_gray_efeff4" />

    <LinearLayout
        android:id="@+id/llytCancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/__picker_color_gray_333333"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>