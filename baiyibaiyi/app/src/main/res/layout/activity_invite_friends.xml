<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@mipmap/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_235dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/llytShadowBg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/linear_shape"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvShareTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_13sp"
                        android:text="就会获得我们送出的优惠大礼包哦～"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <www.qisu666.com.view.InviteFriendsDataView
                        android:id="@+id/inviteFriendsDataView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/dimen_12dp"
                            android:layout_weight="1"
                            android:background="@color/view_line" />

                        <TextView
                            android:textSize="@dimen/dimen_17sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="分享到" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.5dp"
                            android:layout_marginRight="@dimen/dimen_12dp"
                            android:layout_weight="1"
                            android:background="@color/view_line" />
                    </LinearLayout>

                    <www.qisu666.com.view.ShareView
                        android:id="@+id/shareView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="@dimen/dimen_30dp" />
                </android.support.v7.widget.LinearLayoutCompat>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvRewardRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/arrow_right_black"
                android:text="奖励规则"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>