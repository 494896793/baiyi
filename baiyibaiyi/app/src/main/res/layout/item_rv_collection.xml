<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/dimen_165dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:background="@drawable/linear_shape"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="@dimen/dimen_150dp">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingBottom="@dimen/default_margin_tnb"
                   android:paddingLeft="@dimen/dimen_10dp"
                   android:paddingRight="@dimen/dimen_10dp"
                   android:paddingTop="@dimen/dimen_15dp">

                   <TextView
                       android:id="@+id/tv_nearby_title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="海心沙广场"
                       android:textColor="@color/white"
                       android:textSize="18sp" />

                   <TextView
                       android:id="@+id/tv_nearby_fee"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@+id/tv_nearby_title"
                       android:layout_alignParentRight="true"
                       android:text="元/度"
                       android:textColor="@color/warn_notice_color"
                       android:textSize="15sp" />

               </RelativeLayout>


               <LinearLayout
                   android:paddingLeft="@dimen/dimen_10dp"
                   android:paddingTop="@dimen/dimen_3dp"
                   android:paddingRight="@dimen/dimen_10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   >

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_centerVertical="true"
                           android:id="@+id/iv_nearby_target"
                           android:layout_width="@dimen/dimen_13dp"
                           android:layout_height="@dimen/dimen_15dp"
                           android:src="@mipmap/yd_22" />

                       <TextView
                           android:id="@+id/tv_nearby_addr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                           android:layout_toLeftOf="@+id/tv_nearby_distance"
                           android:layout_toRightOf="@id/iv_nearby_target"
                           android:text="广东省广州市天河区临江大道"
                           android:textColor="@color/text_gray" />

                       <TextView
                           android:id="@+id/tv_nearby_distance"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_alignTop="@id/tv_nearby_addr"
                           android:text="1.6km"
                           android:textColor="@color/text_gray" />

                   </RelativeLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="@dimen/default_margin_tnb"
                       android:layout_marginTop="19dp"
                       android:gravity="center_vertical">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="left"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:src="@mipmap/yd_16" />

                           <TextView
                               android:id="@+id/tv_nearby_free_fast"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:text="空闲3"
                               android:textColor="@color/white"
                               android:textSize="13sp" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_marginLeft="10dp"
                               android:src="@mipmap/yd_17" />

                           <TextView
                               android:id="@+id/tv_nearby_free_slow"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:text="空闲5"
                               android:textColor="@color/white"
                               android:textSize="13sp" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="right"
                           android:orientation="horizontal">

                           <ImageView
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_marginLeft="10dp"
                               android:src="@mipmap/yd_18" />

                           <TextView
                               android:id="@+id/tv_nearby_type"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:text="直流/交流"
                               android:textColor="@color/white"
                               android:textSize="13sp" />
                       </LinearLayout>
                   </LinearLayout>

                   <!--<View-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="@dimen/divide_height"-->
                   <!--android:background="@color/bg_primary" />-->

               </LinearLayout>
           </LinearLayout>

           <RelativeLayout
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               android:id="@+id/rl_nearby_charge"
               android:layout_width="180dp"
               android:layout_height="@dimen/dimen_33dp"
               android:layout_gravity="center"
               android:layout_marginBottom="10dp"
               android:background="@drawable/selector_primary_btn">

               <TextView
                   android:id="@+id/tv_nearby_charge"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_marginLeft="10dp"
                   android:paddingLeft="20dp"
                   android:text="前往充电"
                   android:textColor="@color/black"
                   android:textSize="15sp" />

               <ImageView
                   android:layout_width="18dp"
                   android:layout_height="18dp"
                   android:layout_marginLeft="50dp"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/yd_44" />

           </RelativeLayout>
       </RelativeLayout>
    </LinearLayout>

</LinearLayout>