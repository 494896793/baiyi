<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_view_monet_tip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_detail_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@color/black_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_update_back"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_view_all"
                android:layout_width="120dp"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="全部"
                    android:textColor="@color/new_primary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/money_detail_checked" />
            </RelativeLayout>

            <View style="@style/DivideLineStyle" />

            <RelativeLayout
                android:id="@+id/rl_view_charge"
                android:layout_width="120dp"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_view_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="充值"
                    android:textColor="@color/color_black_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_view_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/money_detail_checked"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/DivideLineStyle" />

            <RelativeLayout
                android:id="@+id/rl_view_defund"
                android:layout_width="120dp"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_view_defund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="退款"
                    android:textColor="@color/color_black_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_view_defund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/money_detail_checked"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/DivideLineStyle" />

            <RelativeLayout
                android:id="@+id/rl_view_pay"
                android:layout_width="120dp"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_view_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="消费"
                    android:textColor="@color/color_black_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_view_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/money_detail_checked"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>