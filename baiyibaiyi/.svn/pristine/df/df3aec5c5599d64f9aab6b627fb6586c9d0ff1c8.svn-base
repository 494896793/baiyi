<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/linear_shape"
    android:paddingBottom="20dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:paddingLeft="15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        

        <TextView
            android:id="@+id/tvCarOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textColor="@color/main_info_color"
            android:textSize="@dimen/dimen_15sp" />
        <TextView
            android:gravity="right|center_vertical"
            android:id="@+id/orderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:text="订单日期"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/main_info_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="right|center_vertical"
            android:id="@+id/tvUseCarTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:text="取车网点"
            android:id="@+id/tvGetCarAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_info_color"
            android:textSize="@dimen/dimen_15sp" />
        <TextView
            android:gravity="right|center_vertical"
            android:id="@+id/getCarAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:text="还车网点"
            android:id="@+id/tvReturnCarAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_info_color"
            android:textSize="@dimen/dimen_15sp" />
        <TextView
            android:gravity="right|center_vertical"
            android:id="@+id/returnCarAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>