<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_chongdian"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_11dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/linear_shape"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/default_padding_lnr"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_station_name"
                    style="@style/TextView_Subtitle_Black_Weight"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/ditu_geren"
                    android:drawablePadding="6dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="广州交投中海康城充电站充"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="9dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_right_arrow_black" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="25dp"
                android:text="2016-05-28 14:21"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />

        </LinearLayout>

        <!--<View style="@style/Divide_Horizontal" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_Subtitle_Black"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="@string/charging_record_charging_duration" />

                    <TextView
                        android:textSize="@dimen/dimen_14sp"
                        android:id="@+id/tv_charging_duration"
                        style="@style/TextView_Subtitle_Dark_Gray"
                        android:text="00:22:55"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_Subtitle_Black"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="@string/charging_record_return_amount" />

                    <TextView
                        android:id="@+id/tv_return_amount"
                        style="@style/TextView_Subtitle_Dark_Gray"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="￥14622.000"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.15" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_Subtitle_Black"
                        android:textSize="@dimen/dimen_14sp"
                        android:text="@string/charging_record_charging_amount" />

                    <TextView
                        android:textSize="@dimen/dimen_14sp"
                        android:id="@+id/tv_charging_amount"
                        style="@style/TextView_Subtitle_Dark_Gray"
                        android:text="35度"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="@dimen/dimen_14sp"
                        style="@style/TextView_Subtitle_Black"
                        android:text="@string/charging_record_payment_amount" />

                    <TextView
                        android:textSize="@dimen/dimen_14sp"
                        android:id="@+id/tv_payment_amount"
                        style="@style/TextView_Subtitle_Dark_Gray"
                        android:text="￥14622.000"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                style="@style/TextView_Subtitle_Black"
                android:textSize="@dimen/dimen_14sp"
                android:text="@string/charging_record_actual_amount" />

            <TextView
                android:id="@+id/tv_actual_amount"
                style="@style/TextView_Subtitle_Dark_Gray"
                android:text="￥25"
                android:textColor="@color/warn_notice_color"
                android:textSize="@dimen/dimen_20sp" />
        </LinearLayout>
    </LinearLayout>


    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"-->
    <!--android:background="@color/main_background" />-->

</LinearLayout>