<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:text="支付方式"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:background="@drawable/linear_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/llytCompanyPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/rlytCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivCompanyIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/pay_company_icon" />

                <TextView
                    android:id="@+id/tvCompanyName"
                    style="@style/TextNoIncludeFontPaddingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivCompanyIcon"
                    android:text="企业"
                    android:textColor="@color/color_black_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCompanyDiscount"
                    style="@style/CompanyDiscountStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/tvCompanyName" />

                <ImageView
                    android:id="@+id/ivChooseCompany"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/yc_43" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCompanyDiscountMoney"
                style="@style/TextNoIncludeFontPaddingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="优惠--元"
                android:textColor="@color/color_orange_ff811b"
                android:textSize="14sp" />

            <View
                android:background="@color/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llytBalancePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_balance_pic"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/yc_46" />

                <TextView
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:id="@+id/tvPayType"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_23dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_balance_pic"
                    android:text="余额"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15sp" />

                <TextView
                    android:id="@+id/tvCompanyDiscountBalance"
                    style="@style/CompanyDiscountStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/tvPayType" />

                <ImageView
                    android:id="@+id/iv_choose_paymoney"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/yc_42" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCompanyDiscountMoneyBalance"
                style="@style/TextNoIncludeFontPaddingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="12dp"
                android:text="优惠--元"
                android:textColor="@color/color_orange_ff811b"
                android:textSize="14sp" />

            <View
                android:background="@color/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llytWeixinPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_weixin_pic"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/yc_47" />

                <TextView
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:id="@+id/tvWeixinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_weixin_pic"
                    android:text="微信"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvCompanyDiscountWeixin"
                    style="@style/CompanyDiscountStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/tvWeixinText" />

                <ImageView
                    android:id="@+id/iv_choose_weixinpaymoney"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/yc_42" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCompanyDiscountMoneyWeixin"
                style="@style/TextNoIncludeFontPaddingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="12dp"
                android:text="优惠--元"
                android:textColor="@color/color_orange_ff811b"
                android:textSize="14sp" />

            <View
                android:background="@color/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llytAliPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/iv_pay_treasure"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/yc_48" />

                <TextView
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:id="@+id/tvAliText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_pay_treasure"
                    android:text="支付宝"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvCompanyDiscountAli"
                    style="@style/CompanyDiscountStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/tvAliText" />

                <ImageView
                    android:id="@+id/iv_choose_paytreasure"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/yc_42" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCompanyDiscountMoneyAli"
                style="@style/TextNoIncludeFontPaddingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="44dp"
                android:text="优惠--元"
                android:textColor="@color/color_orange_ff811b"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>