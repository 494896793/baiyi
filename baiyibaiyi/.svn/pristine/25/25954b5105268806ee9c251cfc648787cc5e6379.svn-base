<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlytPersonItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewTopLine"
        android:layout_width="0.001dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:id="@+id/llytPersonItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewTopLine"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPersonItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_settings" />

        <TextView
            android:id="@+id/tvPersonItemName"
            style="@style/TextNoIncludeFontPaddingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="--"
            android:textColor="@color/color_gray_949fa4" />

        <TextView
            android:id="@+id/tvPersonItemDetail"
            style="@style/Ellipsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="5dp"
            android:text="----"
            android:textColor="@color/color_gray_949fa4" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivRedPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llytPersonItem"
        android:layout_toRightOf="@id/llytPersonItem"
        android:src="@mipmap/red_point" />

    <View
        android:id="@+id/viewBottomLine"
        android:layout_width="0.001dp"
        android:layout_height="30dp"
        android:layout_below="@id/llytPersonItem" />
</RelativeLayout>