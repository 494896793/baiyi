<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/main_background"
        android:textSize="@dimen/dimen_22sp" />

    <TextView
        android:id="@+id/tvContentTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:text="里程费+电度费+时长费"
        android:textColor="@color/notice_color"
        android:textSize="@dimen/dimen_12sp" />

    <TextView
        android:id="@+id/tvFeePerKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContentTip"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:text="里程费："
        android:textColor="@color/main_background"
        android:textSize="@dimen/dimen_15sp" />

    <TextView
        android:id="@+id/tvDianFei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFeePerKM"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="电度费："
        android:textColor="@color/main_background"
        android:textSize="@dimen/dimen_15sp" />

    <LinearLayout
        android:id="@+id/llytDayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDianFei"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/tvDayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日间(-- - --)："
            android:textColor="@color/main_background"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/tvFeePerMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/main_background"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/分钟"
            android:textColor="@color/main_background"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llytNightTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llytDayTime"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/tvNightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜间(-- - --)："
            android:textColor="@color/main_background"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/tvFeePerMinNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/main_background"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/分钟"
            android:textColor="@color/main_background"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>