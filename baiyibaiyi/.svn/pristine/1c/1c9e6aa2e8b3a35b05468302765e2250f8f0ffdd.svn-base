    /**
     * 1星显示“非常不满意”，2星显示“不满意”，3星显示“一般“，4星显示“满意”，5星显示“超级满意”
     *
     * @param i
     * @return
     */
    public static String evaluateStar(int i) {
        String evaluate = "超级满意";
        switch (i) {
            case 1:
                evaluate = "非常不满意";
                break;
            case 2:
                evaluate = "不满意";
                break;
            case 3:
                evaluate = "一般满意";
                break;
            case 4:
                evaluate = "满意";
                break;
            case 5:
                evaluate = "超级满意";
                break;
        }
        return evaluate;
    }
