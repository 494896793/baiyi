<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg"
    android:orientation="vertical"
    tools:context="fragment.StationParkingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_bg"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextView_Subtitle_Black"
                android:text="停车费：" />

            <TextView
                android:id="@+id/tv_parking_fee"
                style="@style/TextView_Subtitle_Black"
                android:text="12" />

            <TextView
                style="@style/TextView_Subtitle_Black"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_tnb">

            <TextView
                style="@style/TextView_Subtitle_Black"
                android:text="车位号：" />

            <TextView
                android:id="@+id/tv_parking_no"
                style="@style/TextView_Subtitle_Black"
                android:text="暂无" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_tnb">

            <TextView
                style="@style/TextView_Subtitle_Black"
                android:text="引&#160;&#160;&#160;&#160;导：" />

            <TextView
                android:id="@+id/tv_guide"
                style="@style/TextView_Subtitle_Black"
                android:text="酒店西侧负三层停车场" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>