<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/content_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/title_tnb_padding"
            android:paddingLeft="@dimen/title_lnr_padding"
            android:paddingRight="@dimen/title_lnr_padding"
            android:paddingTop="@dimen/title_tnb_padding"
            android:src="@mipmap/ic_left_arrow_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/user_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/title_lnr_padding"
            android:src="@mipmap/ic_left_arrow_white"
            android:visibility="invisible" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                style="@style/LL_Item"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/linear_shape"
                android:clickable="false">

                <TextView
                    style="@style/TextView_Subtitle_Black"
                    android:text="@string/charging_detail_terminal_no"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_terminal_no"
                    style="@style/TextView_Subtitle_Dark_Gray_MarginLeft"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_tnb"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/linear_shape"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView_Subtitle_Dark_Gray_MarginLeft"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/charging_detail_charging_detail"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextView_Subtitle_Black"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/charging_detail_charging_amount"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_charging_amount"
                        style="@style/TextView_Subtitle_Gray"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="123"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextView_Subtitle_Black"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/charging_detail_charging_duration"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_charging_duration"
                        style="@style/TextView_Subtitle_Gray"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="123"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextView_Subtitle_Black"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/charging_detail_payment_amount"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_payment_amount"
                        style="@style/TextView_Subtitle_Gray"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="123"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_tnb"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/linear_shape"
                android:orientation="vertical">

                <!--<LinearLayout style="@style/LL_Normal">-->

                <!--<ImageView-->
                <!--android:layout_width="@dimen/icon_charging_detail_wnh"-->
                <!--android:layout_height="@dimen/icon_charging_detail_wnh"-->
                <!--android:src="@mipmap/ic_charging_time" />-->

                <TextView
                    style="@style/TextView_Subtitle_Dark_Gray_MarginLeft"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="15dp"
                    android:text="@string/charging_detail_charging_time"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!--</LinearLayout>-->

                <!--<View style="@style/Divide_Horizontal" />-->

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            style="@style/TextView_Subtitle_Black"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/charging_detail_start_time"
                            android:textColor="@color/text_gray"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            style="@style/TextView_Subtitle_Gray"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="123"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            style="@style/TextView_Subtitle_Black"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/charging_detail_end_time"
                            android:textColor="@color/text_gray"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            style="@style/TextView_Subtitle_Gray"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="123"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_tnb"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout style="@style/LL_Normal">

                    <ImageView
                        android:layout_width="@dimen/icon_charging_detail_wnh"
                        android:layout_height="@dimen/icon_charging_detail_wnh"
                        android:src="@mipmap/ic_charge_fee" />

                    <TextView
                        style="@style/TextView_Subtitle_Dark_Gray_MarginLeft"
                        android:text="@string/charging_detail_charge_standard" />

                </LinearLayout>

                <View style="@style/Divide_Horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.baogang.bycx.widget.NoScrollListView
                        android:id="@+id/lv_fees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin_lnr"
                        android:layout_marginRight="@dimen/default_margin_lnr"
                        android:divider="@color/bg_primary"
                        android:dividerHeight="@dimen/dimen_1dp"
                        android:listSelector="#0000">

                    </com.baogang.bycx.widget.NoScrollListView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>