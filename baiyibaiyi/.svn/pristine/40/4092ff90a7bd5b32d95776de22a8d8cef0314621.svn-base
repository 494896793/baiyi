<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytRefund"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tvRefundMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--元"
            android:textColor="@color/color_black_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRemainMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(剩余0元)"
            android:textColor="@color/color_gray_666666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivRefundCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pay_unchecked" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRefundTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingRight="15dp"
        android:text="--" />

    <View
        android:id="@+id/viewDivideLine"
        style="@style/DivideLineStyle" />
</LinearLayout>