<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.baogang.bycx.view.NestedListView
                android:id="@+id/lvLongRent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="@dimen/dimen_18dp"
                android:listSelector="@android:color/transparent">

            </com.baogang.bycx.view.NestedListView>


            <include layout="@layout/layout_deduction_insurance" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/yc_37"
            android:layout_marginRight="@dimen/dimen_9dp"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp" />
        <TextView
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/warn_notice_color"
            android:text="提示：一经支付，不可退款；异地还车需收取挪车费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:id="@+id/tvConfirmUseCar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/selector_primary_btn"
        android:gravity="center"
        android:text="确认用车"
        android:textColor="@color/main_background"
        android:textSize="18sp" />

</LinearLayout>