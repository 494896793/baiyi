    /**
     * 将一个inputstream里面的数据写入SD卡中 第一个参数为目录名 第二个参数为文件名
     */
    public File write2SDFromInput(String path, String fileName,
                                  InputStream inputstream) {
        File file = null;
        OutputStream output = null;
        try {
            createSDDir(path);
            file = createSDFile(path + fileName);
            output = new FileOutputStream(file);
            // 4k为单位，每4K写一次
            byte buffer[] = new byte[4 * 1024];
            int temp = 0;
            while ((temp = inputstream.read(buffer)) != -1) {
                // 获取指定信,防止写入没用的信息
                output.write(buffer, 0, temp);
            }
            output.flush();
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            try {
                output.close();
            } catch (IOException e) {
                e.printStackTrace();
            }
        }

        return file;
    }

    /**
     * 将数据写入指定文件夹中的文件
     *
     * @param fileName 文件名
     * @param content  数据
     * @return 是否写入成功
     */
    public static boolean writeFile(String fileName, String content, String dir) {

        if (Environment.getExternalStorageState()
                .equals(Environment.MEDIA_MOUNTED)) {
            String basePath = getSDBasePath();
            InputStream is = null;
            OutputStream os = null;
            try {

                String path = basePath + dir;
                File pathFile = new File(path);
                if (!pathFile.exists()) {
                    pathFile.mkdirs();
                }
                File file = new File(path + fileName);
                if (file.exists()) {
                    file.delete();
                }
                file.createNewFile();

                is = new ByteArrayInputStream(content.getBytes());
                os = new FileOutputStream(file);
                byte[] buffer = new byte[4 * 1024];
                int temp;
                while ((temp = is.read(buffer)) != -1) {
                    os.write(buffer, 0, temp);
                }
                return true;

            } catch (IOException e) {
                e.printStackTrace();
            } finally {
                try {
                    if (is != null) {
                        is.close();
                    }
                    if (os != null) {
                        os.close();
                    }
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
        return false;
    }

    public static File saveBitmap(String fileName, String dir, Bitmap bitmap) {
        if (Environment.getExternalStorageState()
                .equals(Environment.MEDIA_MOUNTED)) {
            String basePath = getSDBasePath();
            OutputStream os = null;
            try {

                String path = basePath + dir;
                File pathFile = new File(path);
                if (!pathFile.exists()) {
                    pathFile.mkdirs();
                }
                File file = new File(path + fileName);
                if (file.exists()) {
                    file.delete();
                }
                file.createNewFile();
                os = new FileOutputStream(file);
                bitmap.compress(Bitmap.CompressFormat.PNG, 100, os);
                return file;
            } catch (IOException e) {
                e.printStackTrace();
            } finally {
                try {
                    if (os != null) {
                        os.close();
                    }
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
        return null;
    }

    /**
     * 将bitmap保存到指定的文件目录中,先删除原来的file,在保持成新的file
     *
     * @param bitmap   要保存的bitmap
     * @param filePath 保存路径
     * @return 保存后的file
     */
    public static File saveBitmapToNew(Context context, Bitmap bitmap, String filePath) {

        File file = new File(filePath);
        File fileNew = null;
        if (file.exists()) {
            String fileNameNew = file.getName();
            if (fileNameNew.contains(".jpg")) {
                fileNameNew = fileNameNew.replace(".jpg", "0.jpg");
            } else if (fileNameNew.contains(".png")) {
                fileNameNew = fileNameNew.replace(".png", "0.png");
            } else if (fileNameNew.contains(".jpeg")) {
                fileNameNew = fileNameNew.replace(".jpeg", "0.jpeg");
            }
            File dir = new File(getSDBasePath() + File.separator + IMG_TAKE_PIC_DIR);
            if (!dir.exists()) {
                dir.mkdirs();
            }
            fileNew = new File(dir + File.separator + fileNameNew);
            if (!fileNew.exists()) {
                try {
                    fileNew.createNewFile();
//                    file.delete();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
        if (fileNew == null) {
            return null;
        }

        try {
            FileOutputStream fos = new FileOutputStream(fileNew);
            BufferedOutputStream bos = new BufferedOutputStream(fos);
            bitmap.compress(Bitmap.CompressFormat.JPEG, 100, bos);
            Log.i(TAG, "保存后的图片=" + bitmap.getByteCount());

            bos.flush();
            bos.close();
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
//          释放Bitmap
            if (!bitmap.isRecycled()) {
                bitmap.recycle();
            }
        }

//        updateFileFromDatabase(context, file);
        updateFileFromDatabase(context, fileNew);
        return fileNew;
    }

    /**
     * 从指定的文件夹中读取文件列表
     *
     * @param dir 文件夹
     * @return 文件夹中的文件列表
     */
    public static List<Map<String, String>> readFilesInDir(String dir) {
        List<Map<String, String>> listFiles = new LinkedList<>();
        if (Environment.getExternalStorageState()
                .equals(Environment.MEDIA_MOUNTED)) {
            String basePath = getSDBasePath();
            String path = basePath + dir;
            File pathFile = new File(path);
            File[] files = pathFile.listFiles();
            if (files != null && files.length > 0) {
                for (File file : files) {
                    Map<String, String> map = new HashMap<>();
                    map.put("name", file.getName());
                    map.put("path", file.getAbsolutePath());
                    listFiles.add(0, map);
                }
            }
        }
        return listFiles;
    }

    /**
